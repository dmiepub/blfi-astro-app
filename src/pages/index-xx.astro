---
import { supabase } from '../lib/supabaseClient';
import "../styles/global.css";

// Fetch all profiles (public anon access)
const { data: profiles, error } = await supabase
  .from("profiles")
  .select("id, name, email, country, created_at")
  .order("created_at", { ascending: false });
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>User List</title>
  </head>
  <body class="min-h-screen bg-gray-100 p-8">
    <div class="max-w-6xl mx-auto bg-white shadow-lg rounded-xl overflow-hidden">
      <!-- Header -->
      <div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
        <h1 class="text-2xl font-bold text-gray-800">
          User List
        </h1>
        <a
          href="/register"
          class="px-4 py-2 text-sm font-medium text-white bg-blue-600 rounded hover:bg-blue-700 transition"
        >
          Register
        </a>
      </div>

      <!-- Error -->
      {error && (
        <div class="px-6 py-3 bg-red-50 text-red-700 text-sm border-b border-red-200">
          Error: {error.message}
        </div>
      )}

      <!-- Table -->
      {profiles && profiles.length > 0 ? (
        <div class="overflow-x-auto">
          <table class="w-full text-sm text-left text-gray-600">
            <thead class="bg-gray-50 text-gray-700 uppercase text-xs">
              <tr>
                <th scope="col" class="px-6 py-3">ID</th>
                <th scope="col" class="px-6 py-3">Name</th>
                <th scope="col" class="px-6 py-3">Email</th>
                <th scope="col" class="px-6 py-3">Country</th>
                <th scope="col" class="px-6 py-3">Created</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              {profiles.map((u) => {
                const createdAt = new Date(u.created_at);
                return (
                  <tr class="hover:bg-gray-50 transition">
                    <td class="px-6 py-3 font-mono text-xs text-gray-500">{u.id}</td>
                    <td class="px-6 py-3">{u.name}</td>
                    <td class="px-6 py-3">{u.email}</td>
                    <td class="px-6 py-3">{u.country}</td>
                    <td class="px-6 py-3">
                      {createdAt.toLocaleDateString()}{" "}
                      {createdAt.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' })}
                    </td>
                  </tr>
                );
              })}
            </tbody>
          </table>
        </div>
      ) : (
        <div class="px-6 py-6 text-gray-500 text-center">
          No records found
        </div>
      )}
    </div>
  </body>
</html>